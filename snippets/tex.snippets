# glossary
snippet gls gls{}
	\gls{$1}

snippet Gls Gls{}
	\Gls{$1}

snippet acr acrshort{}
	\acrshort{$1}

snippet newgls newglossaryentry{}
	\newglossaryentry{$1}
	{
		name={$2},
		description={$3}
	}

# hyperref
snippet href hyperref
	\href{$1}{$2}

# verb
snippet verb verbatim
	\verb|$1|

# template
snippet paper Paper template
	\documentclass[letterpaper]{article}

	\usepackage[dutch]{babel}
	\usepackage{lipsum}
	\usepackage{geometry}
	\usepackage{xcolor}
	\usepackage[colorlinks=true, allcolors=YellowOrange]{hyperref}
